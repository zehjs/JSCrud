extends ../layout

block content

	h1 Todos os Usuários
	hr
	a(href="/usuarios/create" class="btn btn-primary") Cadastrar Usuário
	hr
	table(class="table well")
		thead
			tr
				th Id:
				th Nome:
				th Login:
				th Senha:
				th Data:
				th &nbsp;
		tbody
			each valor, i in lista
				tr
					td #{valor._id}
					td #{valor.nome}
					td #{valor.login}
					td #{valor.senha}
					td #{valor.data_cad}
					td
						a(href="/usuarios/remove/#{valor._id}", title="Editar", class="btn btn-danger") Remover
						&nbsp;
						a(href="/usuarios/edit/#{valor._id}", title="Editar", class="btn btn-info") Editar
						

	a(href="/") Back